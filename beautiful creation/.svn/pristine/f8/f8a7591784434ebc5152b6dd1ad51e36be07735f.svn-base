<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zuimeichuangyi.activities.SearchActivity"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:background="#4ad39c"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:onClick="search_goback"
            android:id="@+id/search_goback"
            android:background="@mipmap/ic_goback"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <EditText
            android:hint="@string/search_hint"
            android:id="@+id/search_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"/>
        <Button
            android:onClick="search_clearedit"
            android:id="@+id/search_clearedit"
            android:background="@mipmap/ic_clear_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pulltorefresh_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:divider="#ffffff"
        android:dividerHeight="10dp" />



</LinearLayout>
